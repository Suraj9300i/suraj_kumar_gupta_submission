{
  "manifest_version": 3,
  "name": "AZ AI",
  "version": "0.1",
  "author": "Suraj Kumar Gupta",
  "description": "A Chrome Extension that solves doubts on AZ",
  "permissions": [
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://maang.in/*"
      ],
      "css": ["style.css"],
      "js": [
        "content.js"
      ],
      "type": "module"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources" : [
    {
      "resources": [
        "assets/*",
        "scripts/*"
      ],
      "matches" : ["<all_urls>"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/AZlogo.png",
      "24": "assets/AZlogo.png",
      "32": "assets/AZlogo.png"
    },
    "default_popup": "index.html",
    "default_title": "AZ AI"
  }
}
